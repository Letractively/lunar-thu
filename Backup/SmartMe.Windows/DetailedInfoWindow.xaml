<Window x:Name="Window" x:Class="SmartMe.Windows.DetailedInfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DetailedInfoWindow" Height="288" Width="304" Background="#FF101010" HorizontalAlignment="Left" VerticalAlignment="Top" WindowStyle="None">
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="0*"/>
    		<ColumnDefinition Width="0*"/>
    		<ColumnDefinition Width="0*"/>
    		<ColumnDefinition Width="0*"/>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
    	<TextBlock x:Name="TitleTextBlock" Margin="19,16,21,0" VerticalAlignment="Top" Height="34" TextWrapping="Wrap" Background="White" Text="Title" Grid.Column="4"/>
    	<TextBlock x:Name="DescriptionTextBlock" Margin="19,64,21,36" TextWrapping="Wrap" Background="White" Text="Desciption" Grid.Column="4"/>
    	<Button x:Name="OpenLinkButton" HorizontalAlignment="Right" Margin="0,0,21,8" VerticalAlignment="Bottom" Width="107" Height="24" Content="Button" Grid.Column="4" Click="OpenLinkButton_Click"/>
        
    </Grid>
</Window>
